{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
  // When this tsconfig sits inside the `src/` folder, use the current folder as root.
  // Using `.` keeps compiled JS output paths predictable and avoids `src/src` issues.
  "rootDir": "./src",
  // Place compiled output next to the package root `dist/`
  "outDir": "./dist",
    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "node16",
    "types": [
      "node"
    ],
    // For nodejs:
    // "lib": ["esnext"],
    // "types": ["node"],
    // and npm install -D @types/node
    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    // Style Options
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,
    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  }
}